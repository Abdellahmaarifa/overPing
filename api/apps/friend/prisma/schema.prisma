generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("FRIEND_DATABASE_URL")
}


model Friendship {
  id     Int              @id @default(autoincrement())
  userA  Int
  userB  Int
  blocker Int?            
  status FriendshipStatus
}


enum FriendshipStatus {
  FRIEND
  PENDING
  REJECTED
  BLOCKED
}

