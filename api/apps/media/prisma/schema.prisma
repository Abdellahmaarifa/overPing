generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("MEDIA_DATABASE_URL")
}

model ProfileImg {
  id        Int      @id @default(autoincrement())
  imgKey    String   @unique
  filename  String
  mimetype  String
  encoding  String
  content   Bytes
}

model profileBackgroundImg{
 id        Int      @id @default(autoincrement())
  imgKey    String   @unique
  filename  String
  mimetype  String
  encoding  String
  content   Bytes
}

model chatMedia{
 id        Int      @id @default(autoincrement())
  imgKey    String   @unique
  filename  String
  mimetype  String
  encoding  String
  content   Bytes
}
